(defun indent-whole-buffer ()
  "Selects the whole buffer and calls indent-region"
  (interactive)
  (save-excursion
    (indent-region (point-min) (point-max))
    )
  )

(global-set-key (kbd "C-S-f") 'indent-whole-buffer)


